<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorCreator"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        app:cardElevation="10dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        >


        <ImageView
            android:id="@+id/newDonorProfile"
            android:layout_width="138dp"
            android:layout_height="138dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/addprofile"
            />

        <EditText
            android:id="@+id/newDonorName"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:maxLength="15"
            />
        <EditText
            android:id="@+id/newDonorPhon"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Phone Number"
            android:inputType="phone"
            />
        <EditText
            android:id="@+id/newDonorCity"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="City"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/newDonorBloodGroup"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Blood Group"
            android:inputType="text"
            android:maxLength="2"
            android:textAllCaps="true"
            />
        <Button
            android:id="@+id/addNewDonor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Add Donor"
            android:textStyle="bold"
            android:background="@drawable/round"
            android:textColor="@android:color/white"
            />


    </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>